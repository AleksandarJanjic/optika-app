<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/addition_text_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/addition_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/addition_value_new"/>

    <TextView
        android:id="@+id/addition_value_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/addition_text_new"
        app:layout_constraintTop_toBottomOf="@id/addition_increase_whole"
        app:layout_constraintEnd_toEndOf="@+id/addition_decrease_quarter"
        android:text="@string/base_value"/>

    <Button
        android:id="@+id/addition_increase_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/addition_text_new"/>

    <Button
        android:id="@+id/addition_increase_quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/addition_increase_whole"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/addition_decrease_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@id/addition_value_new"
        app:layout_constraintStart_toEndOf="@+id/addition_text_new"/>

    <Button
        android:id="@+id/addition_decrease_quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        app:layout_constraintTop_toBottomOf="@+id/addition_value_new"
        app:layout_constraintStart_toEndOf="@+id/addition_decrease_whole"/>

</androidx.constraintlayout.widget.ConstraintLayout>