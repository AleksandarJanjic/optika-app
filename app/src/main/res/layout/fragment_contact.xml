<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ContactFragment">

    <TextView
        android:id="@+id/old_buyer_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:text="@string/phone_num"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/phone_num_input_new"/>

    <EditText
        android:id="@+id/phone_num_input_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="phone"
        android:ems="6"
        app:layout_constraintTop_toTopOf="@+id/lastname_input_new"
        app:layout_constraintStart_toEndOf="@+id/old_buyer_phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/old_buyer_phone"/>

</androidx.constraintlayout.widget.ConstraintLayout>